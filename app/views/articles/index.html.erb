

<div class="container artic">
  <h1>Article Listing Page</h1>
  <%= link_to 'Create new article',new_article_path, class: "btn btn-primary text-white making" %>
    <% @articles.each do |article|%>
    <div class="card text-center mb-3" style="width: 20rem;">
      <div class="card-body">
        by: <%= article.user.username if article.user %>
          <br>
        <h5 class="card-title">
          
          <%= article.title %>
          </h5>
        <p class="card-text">
          <%= truncate(article.description) %>
        </p>
        <div class="btn btn-primary text-white">
          <%= link_to 'Show', article_path(article), class: "text-white" %>
          </div>
        <%= link_to 'edit', edit_article_path(article), class: "btn btn-primary text-white" %>
        <%= link_to 'Delete', article_path(article), class: "btn btn-primary text-white", data:{turbo_method: :delete} %>
      </div>
      <p>
        <%= article.created_at.strftime("%B %d %Y, %l:%M%P") %>
      </p>
    </div>
    <% end %>
</div>
